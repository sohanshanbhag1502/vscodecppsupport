{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Code Runner",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "python.exe",
            "args": [
                ".\\Crunner.py",
                "${fileExtname}",
                "${fileDirname}\\${fileBasename}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal",
            "isDefault": true
        }
    ]
}
